// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
    "icon_theme": "VSCode Great Icons Theme",
    "project_panel": {
        "hide_hidden": false,
        "dock": "right"
    },
    "agent": {
        "inline_assistant_model": {
            "provider": "zed.dev",
            "model": "claude-sonnet-4-5"
            // "provider": "anthropic",
            // "model": "claude-3-5-sonnet-latest"
        },
        "dock": "left"
    },
    "tab_size": 4,
    "ui_font_family": ".ZedSans",
    "buffer_line_height": "comfortable",
    "buffer_font_family": ".ZedMono",
    "theme": "Catppuccin Latte",
    "vim_mode": true,
    "ui_font_size": 16.0,
    "buffer_font_size": 13.0,
    "autosave": "off",
    "confirm_quit": true,
    "cursor_blink": true,
    "formatter": "language_server",
    "languages": {
        "TypeScript": {
            "code_actions_on_format": {
                "source.organizeImports": true
            },
            "formatter": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "JavaScript": {
            "formatter": {
                "external": {
                    "command": "prettier",
                    "arguments": [
                        "--stdin-filepath",
                        "{buffer_path}"
                    ]
                }
            }
        },
        "TSX": {
            "code_actions_on_format": {
                "source.organizeImports": true
            }
        },
        "Python": {
            "language_servers": [
                "pyright",
                "ruff",
                "!basedpyright",
                "!pylsp"
            ],
            "format_on_save": "on",
            "formatter": {
                "external": {
                    "command": "ruff",
                    "arguments": [
                        "format",
                        "--stdin-filename",
                        "{buffer_path}",
                        "-"
                    ]
                }
            }
        }
    },
    "terminal": {
        "dock": "left"
    },
    "active_pane_modifiers": {
        // "border_size": 0.0,
        // "inactive_opacity": 0.8
    },
    "diagnostics": {
        "inline": {
            "enabled": true
        }
    },
    "experimental.theme_overrides": {
        "error": "#FF0000", // Changes the underline color
        "error.border": "#FF0000" // Changes the border color of the error popup
    },
    "unnecessary_code_fade": 0.1,
    // "window_background_appearance": "blurred",
    "theme_overrides": {
        "Catppuccin Latte": {
            "background.appearance": "blurred",
            "background": "#f2eeeb",
            "editor.background": "#f2eeeb",
            "editor.gutter.background": "#f2eeeb",
            "terminal.background": "#f2eeeb",
            "tab_bar.background": "#f2eeeb",
            "tab.active_background": "#f2eeeb",
            "tab.inactive_background": "#f2eeeb",
            "status_bar.background": "#f2eeeb",
            "title_bar.background": "#f2eeeb",
            "toolbar.background": "#f2eeeb",
            "panel.background": "#f2eeeb",
            "elevated_surface.background": "#f2eeeb",
            "scrollbar.track.background": "#f2eeeb"
        },
        "Ayu Mirage": {
            // "background.appearance": "blurred",
            // // 1. The Main Window Tint (Keep this)
            // "background": "#232323e6",
            // // 2. FIX: Set these to MATCH the background color, not transparent.
            // // This ensures they are dark and blurred, fixing the white bars.
            // "title_bar.background": "#232323e6",
            // "status_bar.background": "#232323e6",
            // "tab_bar.background": "#00000000",
            // "toolbar.background": "#232323",
            // // 3. Keep the content areas transparent (so they show the window tint)
            // "editor.background": "#00000000",
            // "editor.gutter.background": "#00000000",
            // "terminal.background": "#00000000",
            // "surface.background": "#00000000",
            // "elevated_surface.background": "#232323",
            // "scrollbar.track.background": "#00000000",
            // "editor.line_number": "#adb5bd",
            // "editor.active_line_number": "#ffd670",
            // "editor.sticky_header.background": "#232323",
            // // "surface.background": "#232323e6",
            // "panel.background": "#00000000",
            // // "surface.background": "#232323e6",
            // // 4. Tab States
            // "tab.active_background": "#232323",
            // "tab.inactive_background": "#00000000",
            // "background.appearance": "blurred",
            "background": "#232323",
            "editor.background": "#232323",
            "editor.gutter.background": "#232323",
            "terminal.background": "#232323",
            "tab_bar.background": "#232323",
            "tab.active_background": "#232323",
            "tab.inactive_background": "#232323",
            "status_bar.background": "#232323",
            "title_bar.background": "#232323",
            "toolbar.background": "#232323",
            "panel.background": "#232323",
            "elevated_surface.background": "#232323",
            "scrollbar.track.background": "#232323",
            "editor.line_number": "#6c757d",
            "editor.active_line_number": "#ffd670",
            "syntax": {
                /* --- KEYWORDS & CONTROL FLOW --- */
                "keyword": {
                    "color": "#ffbc75",
                    "font_style": null // General keywords: import, from, as, return
                },
                // "keyword.control": {
                //     "color": "#ffcc66" // Control flow: if, else, for, while, try, except
                // },
                // "storage": {
                //     "color": "#ffcc66" // Storage keywords: class, def, async
                // },
                // "operator": {
                //     "color": "#f29668" // Math/Logic: +, -, =, ==, not, in, is
                // },
                /* --- TYPES & CLASSES --- */
                "type": {
                    "color": "#70d6ff" // Type hints: str, int, bool, Dict, Optional
                },
                // "entity.name.type": {
                //     "color": "#fff",
                //     "font_weight": 700 // Class names: ChromaDocument, MyClass
                // },
                // "constructor": {
                //     "color": "#fff" // Class instantiation: MyClass()
                // },
                // /* --- FUNCTIONS & METHODS --- */
                "function": {
                    "color": "#ffd670", // Function definitions: def my_func():
                    "font_style": "italic"
                },
                "function.method": {
                    "color": "#ffd670", // Class methods: def my_method(self):
                    "font_style": "italic"
                },
                "function.call": {
                    "color": "#ffd670", // Calling a function: print(), my_func()
                    "font_style": "italic"
                },
                // "attribute": {
                //     "color": "#f7b801" // Decorators: @classmethod, @dataclass
                // },
                // /* --- VARIABLES & PROPERTIES --- */
                "variable": {
                    "color": "#ced4da", // Standard variables: x = 1, my_var,
                    // "font_style": "italic"
                },
                // "variable.parameter": {
                //     "color": "#fff" // Function arguments: (self, data, id)
                // },
                // "variable.property": {
                //     "color": "#fff" // Class attributes: self.id, self.score
                // },
                // "variable.special": {
                //     "color": "#fff" // Special vars: self, cls
                // },
                // /* --- LITERALS (STRINGS & NUMBERS) --- */
                "string": {
                    "color": "#ccff33", // Text strings: "hello", 'world'
                },
                "string.doc": {
                    "color": "#ccff33",
                    "font_style": "italic" // Docstrings: """ Description """
                },
                "string.escape": {
                    "color": "#ccff33" // Escape chars: \n, \t inside strings
                },
                "number": {
                    "color": "#ff99ac" // Integers/Floats: 10, 0.5, 42
                },
                "boolean": {
                    "color": "#ff99ac" // Booleans: True, False
                },
                "constant": {
                    "color": "#ff99ac" // Constants: ALL_CAPS_VARS
                },
                // /* --- COMMENTS & PUNCTUATION --- */
                "comment": {
                    "color": "#6c757d",
                    "font_style": "italic" // Standard comments: # TODO
                },
                // "punctuation": {
                //     "color": "#fff" // General punctuation: ;
                // },
                // "punctuation.bracket": {
                //     "color": "#fff" // Brackets: (), [], {}
                // },
                // "punctuation.delimiter": {
                //     "color": "#fff" // Delimiters: , . :
                // }
            }
        }
    },
    "centered_layout": {
        "left_padding": 0.4,
        "right_padding": 0.4,
    },
    "sticky_scroll": {
        "enabled": true
    },
    "show_edit_predictions": true
}
